@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpCtx

@{
    Layout = null;

    var brand = "ABC Retailers";
    var user = HttpCtx.HttpContext?.Session.GetString("UserName");
    var role = HttpCtx.HttpContext?.Session.GetString("UserRole");

    bool isAdmin = string.Equals(role, "Admin", System.StringComparison.OrdinalIgnoreCase);
    bool isCustomer = string.Equals(role, "Customer", System.StringComparison.OrdinalIgnoreCase);
}

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @brand</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body>

    <!-- NAVBAR -->
    <nav class="lux-navbar navbar navbar-expand-lg px-3">
        <div class="container">

            <a class="lux-brand navbar-brand d-flex align-items-center gap-2"
               asp-controller="Home" asp-action="Index">
                <i class="bi bi-bag-check-fill" style="font-size:1.25rem; color:var(--accent);"></i>
                @brand
            </a>

            <button class="navbar-toggler text-bg-dark"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="nav">

                <ul class="navbar-nav ms-auto align-items-lg-center">

                    <!-- HOME -->
                    <li class="nav-item">
                        <a class="lux-link nav-link"
                           asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door-fill"></i> Home
                        </a>
                    </li>

                    <!-- CUSTOMER -->
                    @if (isCustomer)
                    {
                        <li class="nav-item">
                            <a class="lux-link nav-link"
                               asp-controller="Products" asp-action="Index">
                                <i class="bi bi-grid-3x3-gap-fill"></i> Products
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="lux-link nav-link"
                               asp-controller="Orders" asp-action="MyOrders">
                                <i class="bi bi-receipt-cutoff"></i> Orders
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="lux-link nav-link"
                               asp-controller="Upload" asp-action="Index">
                                <i class="bi bi-cloud-upload-fill"></i> Payment Proof
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="lux-link nav-link"
                               asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-bag-fill"></i> My Cart
                            </a>
                        </li>
                    }

                    <!-- ADMIN -->
                    @if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="lux-link nav-link"
                               asp-controller="Customers" asp-action="Index">
                                <i class="bi bi-people-fill"></i> Customers
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="lux-link nav-link"
                               asp-controller="Products" asp-action="Index">
                                <i class="bi bi-box-seam-fill"></i> Manage Products
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="lux-link nav-link"
                               asp-controller="Orders" asp-action="Manage">
                                <i class="bi bi-clipboard-check-fill"></i> Manage Orders
                            </a>
                        </li>

                        <!-- NEW ADMIN PAYMENT PROOFS LINK -->
                        <li class="nav-item">
                            <a class="lux-link nav-link"
                               asp-controller="Upload" asp-action="Admin">
                                <i class="bi bi-cloud-check-fill"></i> Payment Proofs
                            </a>
                        </li>
                    }

                    <!-- PRIVACY -->
                    <li class="nav-item">
                        <a class="lux-link nav-link"
                           asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-shield-lock-fill"></i> Privacy
                        </a>
                    </li>

                    <!-- AUTH -->
                    <li class="nav-item ms-lg-3 mt-2 mt-lg-0">
                        @if (string.IsNullOrWhiteSpace(user))
                        {
                            <div class="d-flex align-items-center gap-3">

                                <a class="lux-link d-flex align-items-center gap-1"
                                   asp-controller="Login" asp-action="Login">
                                    <i class="bi bi-door-open-fill"></i>
                                    Sign In
                                </a>

                                <a class="lux-link d-flex align-items-center gap-1"
                                   asp-controller="Login" asp-action="Register">
                                    <i class="bi bi-person-plus-fill"></i>
                                    Register
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center gap-3">
                                <span class="lux-user-label d-flex align-items-center gap-1">
                                    <i class="bi bi-person-circle"></i>
                                    Hi, @user
                                </span>

                                <form asp-controller="Login" asp-action="Logout"
                                      method="post" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-outline-danger btn-sm" type="submit">
                                        Logout
                                    </button>
                                </form>
                            </div>
                        }
                    </li>

                </ul>

            </div>
        </div>
    </nav>

    <!-- MAIN -->
    <main role="main" class="pb-5">
        <div class="container py-5">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="lux-footer py-4 text-center">
        <div class="container small">
            © @DateTime.UtcNow.Year – @brand
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
