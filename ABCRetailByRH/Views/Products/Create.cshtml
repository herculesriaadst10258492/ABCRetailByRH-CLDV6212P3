@model ABCRetailByRH.Models.Product
@using Microsoft.AspNetCore.Html

@{
    ViewData["Title"] = "Create Product";

    var backUrl = Url.Action("Index", "Products");
    IHtmlContent right = new HtmlString($"<a href=\"{backUrl}\" class=\"btn btn-outline-light\">Back</a>");
}

<div class="container py-5" style="max-width:820px;">

    @await Html.PartialAsync("_SectionHeader",
    ("Create Product", "Add a new product to your Azure Table/Blob catalog", right))

    <div class="card card-dark p-4">

        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control input-dark" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control input-dark"
                       type="number" step="0.01" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Stock" class="form-label"></label>
                <input asp-for="Stock" class="form-control input-dark"
                       type="number" step="1" min="0" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">Product Image</label>
                <input class="form-control input-dark" type="file"
                       name="imageFile" accept="image/*" />
            </div>

            <button class="btn btn-gold">Save</button>
            <a class="btn btn-link" asp-action="Index">Cancel</a>

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
