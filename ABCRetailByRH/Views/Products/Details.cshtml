@model ABCRetailByRH.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<!-- HEADER -->
<div class="lux-page-header">
    <div class="lux-page-icon"><i class="bi bi-box-seam"></i></div>
    <div>
        <h1 class="lux-page-title">@Model.Name</h1>
        <p class="lux-page-sub">Full product information</p>
    </div>

    <div class="ms-auto d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-outline-light btn-sm">
            <i class="bi bi-pencil"></i>
        </a>
        <a asp-action="Delete" asp-route-id="@Model.RowKey" class="btn btn-outline-danger btn-sm">
            <i class="bi bi-trash"></i>
        </a>
    </div>
</div>

<!-- PRODUCT PANEL -->
<div class="card-dark p-4 mt-3">

    <div class="row g-4">

        <!-- IMAGE -->
        <div class="col-md-5">
            <div class="ratio ratio-4x3">
                <img src="@(string.IsNullOrWhiteSpace(Model.ImageUrl)
                                         ? "https://dummyimage.com/800x600/222/fff.png&text=No+Image"
                                         : Model.ImageUrl)"
                     class="img-fluid rounded"
                     style="object-fit:cover;" />
            </div>
        </div>

        <!-- DETAILS -->
        <div class="col-md-7">

            <h4 class="mb-3">Product Details</h4>

            <dl class="row">
                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">R @Model.Price</dd>

                <dt class="col-sm-3">Stock</dt>
                <dd class="col-sm-9">@Model.Stock</dd>
            </dl>

            <form asp-controller="Cart" asp-action="Add" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.RowKey" />
                <button class="btn btn-gold mt-3">
                    <i class="bi bi-bag-plus"></i> Add to Cart
                </button>
            </form>

        </div>

    </div>

</div>
