@model ABCRetailByRH.ViewModels.CartViewModel
@{
    ViewData["Title"] = "My Cart";
}

<!-- HEADER -->
<div class="lux-page-header">
    <div class="lux-page-icon"><i class="bi bi-bag"></i></div>
    <div>
        <h1 class="lux-page-title">My Cart</h1>
        <p class="lux-page-sub">Review your items before checkout</p>
    </div>
</div>

@if (!Model.Items.Any())
{
    <div class="empty-cart text-center mt-5">
        <div class="empty-cart-icon">
            <i class="bi bi-cart-x"></i>
        </div>
        <h2>Your cart is currently empty</h2>
        <p class="text-secondary">Add some products to begin shopping.</p>

        <a asp-controller="Products" asp-action="Index" class="btn btn-gold mt-3">
            Browse Products
        </a>
    </div>
}
else
{
    <div class="cart-list mt-4">

        @foreach (var item in Model.Items)
        {
            <div class="cart-row card-dark p-3 mb-3">

                <div class="row g-3 align-items-center">

                    <!-- IMAGE -->
                    <div class="col-3">
                        <div class="ratio ratio-4x3">
                            <img src="@(string.IsNullOrWhiteSpace(item.ImageUrl)
                                                                       ? "https://dummyimage.com/800x600/222/fff.png&text=No+Image"
                                                                       : item.ImageUrl)"
                         class="cart-img rounded" />
                </div>
            </div>

                    <!-- DETAILS -->
                    <div class="col-6">
                        <h5 class="mb-1" style="color:var(--ink-strong);">@item.Name</h5>
                        <p class="text-secondary mb-2">R @item.UnitPrice</p>

                        <!-- QTY CONTROL -->
                        <form asp-action="UpdateQty" method="post" class="qty-control">
                            @Html.AntiForgeryToken()

                            <input type="hidden" name="id" value="@item.Id" />     <!-- 🔥 FIXED -->

                            <button name="qty" value="@(item.Quantity - 1)" class="qty-btn">-</button>

                            <span class="qty-display">@item.Quantity</span>

                            <button name="qty" value="@(item.Quantity + 1)" class="qty-btn">+</button>
                        </form>

                    </div>

                    <!-- REMOVE -->
                    <div class="col-3 text-end">
                        <form asp-action="Remove" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />      <!-- 🔥 FIXED -->
                            <button class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>

                </div>

            </div>
        }

    </div>

    <!-- TOTALS SECTION -->
    <div class="cart-summary card-dark p-4 mt-4">

        <div class="d-flex justify-content-between mb-2">
            <span class="text-secondary">Subtotal</span>
            <span>R @Model.Subtotal</span>
        </div>

        <div class="d-flex justify-content-between mb-2">
            <span class="text-secondary">VAT (15%)</span>
            <span>R @Model.VAT</span>
        </div>

        <div class="d-flex justify-content-between mb-2">
            <span class="text-secondary">Shipping</span>
            <span>Free</span>
        </div>

        <hr />

        <div class="d-flex justify-content-between mb-3">
            <h4>Total</h4>
            <h4>R @Model.GrandTotal</h4>
        </div>

        <form asp-action="Checkout" method="post">
            @Html.AntiForgeryToken()
            <button class="btn btn-gold w-100 py-2">
                Checkout
            </button>
        </form>
    </div>
}
