@model ABCRetailByRH.Models.AppUser
@using ABCRetailByRH.Models

@{
    ViewData["Title"] = "Edit Customer";

    var header = new SectionHeaderModel(
        Title: "Edit Customer",
        Subtitle: "Update customer account details",
        RightHtml: $"<a href=\"{Url.Action("Index", "Customers")}\" class=\"btn btn-gold\">Back</a>"
    );
}

@await Html.PartialAsync("_SectionHeader", header)

<div class="container py-5" style="max-width:820px;">

    <div class="card card-dark p-4">

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Username" class="form-label text-light"></label>
                <input asp-for="Username" class="form-control input-dark" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label text-light"></label>
                <input asp-for="Email" class="form-control input-dark" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label text-light"></label>
                <input asp-for="Phone" class="form-control input-dark" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Role" class="form-label text-light"></label>
                <select asp-for="Role" class="form-control input-dark">
                    <option value="Customer">Customer</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>

            <button class="btn btn-gold px-4">Save Changes</button>
            <a class="btn btn-outline-light px-4" asp-action="Index">Back</a>
        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
