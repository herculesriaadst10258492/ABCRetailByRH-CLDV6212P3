@model IEnumerable<ABCRetailByRH.Models.AppUser>
@using ABCRetailByRH.Models

@{
    ViewData["Title"] = "Customers";

    var header = new SectionHeaderModel(
        Title: "Customers",
        Subtitle: "Manage registered customer accounts",
        RightHtml: $"<a href=\"{Url.Action("Create", "Customers")}\" class=\"btn btn-gold\">Add Customer</a>"
    );
}

@await Html.PartialAsync("_SectionHeader", header)

<div class="container py-5" style="max-width:1100px;">

    <!-- DARK CARD WRAPPER -->
    <div class="card card-dark p-4">

        <div class="table-responsive">
            <table class="table align-middle table-dark table-hover mb-0">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Username</td>
                            <td>@c.Email</td>
                            <td>@c.Phone</td>
                            <td>@c.Role</td>

                            <td class="text-end">

                                <a class="btn btn-sm btn-outline-light me-1"
                                   asp-action="Details"
                                   asp-route-id="@c.Id">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a class="btn btn-sm btn-outline-light me-1"
                                   asp-action="Edit"
                                   asp-route-id="@c.Id">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a class="btn btn-sm btn-outline-danger"
                                   asp-action="Delete"
                                   asp-route-id="@c.Id">
                                    <i class="bi bi-trash"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>
